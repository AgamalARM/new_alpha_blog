<h1>Edit Article</h1>
<% if @article.errors.any? %>
   <h3>The following Errors prevented Article to save in Database</h3>
   <ol>
     <% @article.errors.full_messages.each do |msg|%>
       <li><%= msg%></li>
     <% end %>
   </ol>
<% end %>   
   
   
   
<%= form_with(model: @article, local:true) do |f| %>
  <p>
      <%= f.label :title%> <br>
      <%= f.text_field :title%>
  </p>
  <p>
      <%= f.label :description%> <br>
      <%= f.text_area :description%>
  </p>
  <p>
      <%= f.submit%>
  </p>
  
<% end %>
